<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="accountService" class="com.example.exercise16_1.service.AccountService" abstract="true"></bean>
    <bean id="accountServiceImpl" class="com.example.exercise16_1.service.AccountServiceImpl" parent="accountService">
        <property name="accountDAO" ref="accountDAOImpl"></property>
        <property name="currencyConverter" ref="currencyConverterServiceImpl"></property>
        <property name="jmsSender" ref="jmsServiceImpl"></property>
        <property name="logger" ref="loggerImpl"></property>

        <!--        <constructor-arg ref="accountDAOImpl"></constructor-arg>-->
        <!--        <constructor-arg ref="currencyConverterServiceImpl"></constructor-arg>-->
        <!--        <constructor-arg ref="jmsServiceImpl"></constructor-arg>-->
        <!--        <constructor-arg ref="loggerImpl"></constructor-arg>-->
    </bean>

    <bean id="accountDAO" class="com.example.exercise16_1.dao.AccountDAO" abstract="true"></bean>
    <bean id="accountDAOImpl" class="com.example.exercise16_1.dao.AccountDAOImpl" parent="accountDAO"></bean>

    <bean id="currencyConverterService" class="com.example.exercise16_1.service.CurrencyConverter" abstract="true"></bean>
    <bean id="currencyConverterServiceImpl" class="com.example.exercise16_1.service.CurrencyConverterImpl" parent="currencyConverterService"></bean>

    <bean id="jmsService" class="com.example.exercise16_1.jms.JMSSender" abstract="true"></bean>
    <bean id="jmsServiceImpl" class="com.example.exercise16_1.jms.JMSSenderImpl" parent="jmsService"></bean>

    <bean id="logger" class="com.example.exercise16_1.logging.Logger" abstract="true"></bean>
    <bean id="loggerImpl" class="com.example.exercise16_1.logging.LoggerImpl" parent="logger"></bean>



</beans>